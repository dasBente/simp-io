{
    "manifest_version": 2,
    "name": "simp.io",
    "version": "0.3.1",
    "description": "Summarizes payments on the YouTube payment page.",
    "permissions": [
        "tabs", "storage"
    ],
    "background": {
        "scripts": [
            "lib/browser-polyfill.min.js",
            "background.js"
        ]
    },
    "icons": {
        "48": "icons/48.png",
        "96": "icons/96.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "icons/19.png",
            "38": "icons/38.png"
        },
        "default_title": "simp-io",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/paid_membership*"],
            "js": [
                "lib/browser-polyfill.min.js",
                "content.js"
            ]
        }
    ]
}