{
  "manifest_version":2,
  "version":"0.0.0",
  "name":"simp.io",
  "description":"Summarizes payments on the YouTube payment page.",
  "permissions":[
    "storage"
  ],
  "background":{
    "scripts":[
      "build/background.js"
    ]
  },
  "icons":{
    "48":"icons/48.png",
    "96":"icons/96.png"
  },
  "browser_action":{
    "default_icon":{
      "19":"icons/19.png",
      "38":"icons/38.png"
    },
    "default_title":"simp-io",
    "default_popup":"popup.html"
  },
  "content_scripts":[
    {
      "matches":[
        "*://*.youtube.com/paid_membership*"
      ],
      "js":[
        "build/content.js"
      ]
    }
  ]
}
